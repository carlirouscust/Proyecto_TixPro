@page "/Ticket/Compra/{eventoId:int}"
@inject TicketService ticketService
@inject EventosService eventosService
@rendermode InteractiveServer
@inject NavigationManager navigationManager


<EditForm Model="evento">



    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row align-items-center">
                <!-- Imagen -->
                <div class="col-md-6">
                    <img class="card-img" src="@evento.imagen" alt="Imagen del Evento">
                </div>
                <!-- Contenido de Texto -->
                <div class="col-md-6">
                    <div class="card-body">
                        <h5 class="fw-bold">@evento.nombre</h5>
                        <p class="text-muted">
                            <span class="text-decoration-line-through">RD$ 1000.00</span>
                            <span class="text-dark fw-bold">RD$ @evento.precio</span>
                        </p>
                        <p><i class="bi bi-calendar4-week"></i> @evento.lugar</p>
                        <p><i class="bi bi-geo-alt"></i> @evento.fecha</p>

                        <div class="quantity-controls d-flex align-items-center">
                            <div class="btn-group" role="group" aria-label="Cantidad">
                                <button type="button" class="btn btn-outline-primary" @onclick="DecreaseQuantity">
                                    <i class="bi bi-dash"></i>
                                </button>
                                <div class="quantity-box">
                                    <input type="text" class="quantity-number" @bind="quantity" readonly>
                                </div>
                                <button type="button" class="btn btn-outline-primary" @onclick="IncreaseQuantity">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                        </div>


                        <!-- Botón de Comprar con Precio Total -->
                        <div class="mb-3">
                            <button class="btn btn-outline-success d-flex align-items-center justify-content-center bi bi-ticket" @onclick="NavigateToCart">
                            Comprar Tickets
                            <div class="total-price me-2">
                                 RD$ @totalPrice.ToString("F2")
                            </div>
                        </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</EditForm>

@code {
    [Parameter]
    public int eventoId { get; set; }
    public Evento evento { get; set; } = new Evento();
    private int quantity = 0;
    private decimal totalPrice = 0.00m;


    protected override async Task OnInitializedAsync()
    {
        evento = await eventosService.Buscar(eventoId);
        UpdateTotalPrice();
    }

    private void IncreaseQuantity()
    {
        quantity++;
        UpdateTotalPrice();
    }

    private void DecreaseQuantity()
    {
        if (quantity > 0)
        {
            quantity--;
            UpdateTotalPrice();
        }
    }

    private void UpdateTotalPrice()
    {
        totalPrice = quantity * evento.precio;
    }

    private void NavigateToCart()
    {
        
        navigationManager.NavigateTo($"/Ticket/Carrito/{eventoId}");
    }
}
