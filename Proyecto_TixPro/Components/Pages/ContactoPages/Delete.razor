@page "/Contacto/Delete/{usuarioId:int}"
@inject NavigationManager NavigationManager
@inject UsuariosService usuariosService
@rendermode InteractiveServer

<EditForm Model="usuario">
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Eliminar este Contacto</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    </head>
    <body style="margin: 0; padding: 0; font-family: Arial, sans-serif; background-color: #fff;">
        <div style="background-color: #f8f9fa; border-radius: 20px; padding: 30px; width: 100%; max-width: 600px; margin: 50px auto; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
            <div style="text-align: center; margin-bottom: 20px; font-size: 1.5rem; font-weight: bold; color: #2c3e50;">
                ¿Estas seguro que deseas eliminar este contacto?
            </div>
            <div>
                <h4 style="font-size: 1.1rem;">Nombre: <span>@usuario.nombre</span></h4>
                <p>
                    <span style="font-size: 1.1rem;">WhatsApp: </span>@usuario.whatsapp
                </p>
                <p style="font-size: 1.1rem;">Asunto: <span>@usuario.asunto</span></p>
                <p style="font-size: 1.1rem;">Comentario: <span style="font-style: italic;">@usuario.comentario</span></p>

                <div style="display: flex; justify-content: center; gap: 10px; margin-top: 20px;">
                    <button style="background-color: red; color: white; border: none; border-radius: 20px; padding: 10px 20px; font-weight: bold; cursor: pointer;" @onclick="Eliminar">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <button style="background-color: black; color: white; border: none; border-radius: 20px; padding: 10px 20px; font-weight: bold; cursor: pointer;" @onclick="Volver">
                        <i class="bi bi-arrow-left-circle"></i> Volver
                    </button>
                </div>
            </div>
        </div>
    </body>
    <div style="height: 160px;"></div>
</html>
 
</EditForm>
<!-- Footer-->
<footer class="py-5 bg-dark" style="border-top-left-radius: 20px; border-top-right-radius: 20px;">
    <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Ozcudi-Studios</p></div>
</footer>


@code {
    [Parameter]
    public int usuarioId { get; set; }
    public Usuario usuario { get; set; } = new Usuario();

    protected override async Task OnInitializedAsync()
    {
        usuario = await usuariosService.Buscar(usuarioId);
    }

    public void Volver()
    {
        NavigationManager.NavigateTo("/Contacto/Index");
    }

    public async Task Eliminar()
    {
        bool eliminado = await usuariosService.Eliminar(usuarioId);
        if (eliminado)
        {
            NavigationManager.NavigateTo("/Contacto/Index");
        }
        else
        {
            Console.WriteLine("Error al eliminar el usuario.");
        }
    }
}
