@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
       <AuthorizeView>
           <NotAuthorized>
                <div class="top-row px-4 d-flex align-items-center justify-content-between">
                    <img class="card-img-top" src="images/tixlogo en png.png" alt="Logo" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover;" />

                    <div class="ms-auto">
                        <a href="/Account/Register" class="btn btn-dark bi bi-person rounded-pill" type="button">Sign In</a>
                        <a href="/Account/Login" class="btn btn-outline-dark bi bi-person-badge rounded-pill" type="button">Log In</a>
                    </div>
                </div>

            </NotAuthorized>

            <Authorized>
                <div class="top-row px-4 d-flex align-items-center justify-content-between">
                    <img class="card-img-top" src="images/tixlogo en png.png" alt="Logo" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover;" />

                    <div class="ms-auto">
                        <a href="/Account/Manage" class="btn btn-outline-dark bi bi-person rounded-pill" type="button">Mi cuenta</a>
                    </div>
                </div>                
            </Authorized>
        </AuthorizeView>
       

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
