@inherits LayoutComponentBase

<div class="page">
    <main>
       <AuthorizeView>
           <NotAuthorized>
                <div class="top-row px-4 d-flex align-items-center justify-content-between">
                    <a href="/">
                        <img class="card-img-top" src="images/tixlogo en png.png" alt="Logo" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover;" />
                    </a>

                    <div class="ms-auto">
                        <a href="/Account/Login" class="btn btn-outline-dark bi bi-person-badge rounded-pill" type="button"> Mi cuenta</a>
                        <a href="/Eventos/Create" class="btn btn-dark bi bi-file-earmark-plus-fill rounded-pill" type="button"> Crear Evento</a> @* temporal para poder trabajar *@
                    </div>
                </div>

            </NotAuthorized>

            <Authorized>
                <div class="top-row px-4 d-flex align-items-center justify-content-between">
                    <a href="/">
                        <img class="card-img-top" src="images/tixlogo en png.png" alt="Logo" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover;" />
                    </a>

                    <div class="ms-auto">
                        <a href="/Account/Manage" class="btn btn-outline-dark bi bi-person rounded-pill" type="button"> Mi cuenta</a>  
                        @* <a href="/Account/Manage" class="btn btn-dark bi bi-person rounded-pill" type="button">Crear Evento</a> *@
                        <AuthorizeView Roles="Admin"> 
                            <ChildContent Context="adminContext">
                                <a href="/Eventos/Create" class="btn btn-dark bi bi-file-earmark-plus-fill rounded-pill" type="button"> Crear Evento</a>
                            </ChildContent>                         
                        </AuthorizeView>
                    </div>
                </div>                
            </Authorized>
        </AuthorizeView>
       

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
